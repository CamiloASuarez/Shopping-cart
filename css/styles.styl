//--- global variables ---
font1 = 'Oswald', sans-serif
color1 = #FC5130
color2 = #E9E9EC
colorbasic = #ffffff
bntwidth = 130px

//---                  ---

*
  margin 0
  padding 0
  font-family: font1

.header
  display: flex
  justify-content space-between
  align-items center
  background-color color1
  //border 1px solid red
  width 100%
  height 80px
  &__logo
    padding-left: 30px
    img
      width 60px
      height 60px
  /* &__menu
    display flex
    padding-right: 30px
    justify-content: space-between
    width 115px
    ul
      text-decoration none
    //border 1px solid orange
    li
      //border 1px solid green
      list-style none
    img
      width 45px
      height 45px
  &__menu--contador
    display flex
    justify-content center
    background yellow
    height 28px
    border-radius: 50%
    font-size 18px
    font-weight 600
    width: 200px */

  &__show
    img
      width: 60px
      cursor pointer
      background color1
      border-style none
      margin-right 30px
    cursor pointer
    z-index 3
    margin
    img
      width 45px
      height 45px
    

  &__show__carrito
    border 1px solid color1
    min-width: 300px
    position: absolute
    right 26px
    background color2
    display: none
    padding: 10px 5px 10px 0
    border-radius: 5px

  &__drop
    display: flex
    justify-content: center

.header__show:hover .header__show__carrito
  display: block


.table
  width 100%
  padding 10px
  text-align center
  td
    a
      margin-left 5px
      color red
      font-size 1.3em

.btn-1
  width: bntwidth
  background-color #f22d27
  border none
  color white
  padding 10px
  border-radius 3px

.btn-2
  width: bntwidth
  background #27bb69
  border none
  color white
  padding 10px
  margin-left 10px
  border-radius 3px

.navbar

  &__main
    display none
    width 100%
    justify-content center
    align-items: center
    padding: 0 20px
    list-style none
    //border 1px solid red
    font-size: 22px
    font-weight 600
    background:  color1
    a
      text-decoration none
      color color2
      text-align center

  &__toggle
    text-align center
    margin-top 20px
    img
      //position absolute
      cursor pointer
    span
      cursor pointer
      color color1
      font-size: 25px
      font-weight 600

.active
  display block
  text-align center


.products
  display grid
  height 100%
  grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
  grid-gap 4em 3em
  justify-items center
  //border 1px solid green
  padding-top 4em

  &__product
    //border 1px solid red
    width: 300px
    height: 370px
    background color2
    border-radius 11px
    img
      padding 40px
      width: 210px
      height: 195px

  &__product--details
    height 90px
    background color1
    color: white
    text-align: center
    padding-top: 20px
    a
      background: color2
      color: color1
      padding: 0 40px
      border-radius: 5px
      text-decoration: none

//CART PAGE CSS

.main__cart
  margin 0 auto
  margin-top: 40px

.main__cart
  ion-icon
    font-size 24px
    color blue
    cursor pointer
  

.main__cart__header
  margin 0 auto
  display grid
  grid-template-columns repeat(4, minmax(20px, 1fr))
  text-align: center
  border 1px solid red
  h4
    color color1


//media query RESPONSIVE

@media screen and (min-width 768px)
  .navbar
    display flex
    justify-content space-between
    align-items center

  .navbar__main
    display flex
    justify-content space-evenly
    align-items center
    background colorbasic
    margin-top 20px
    a
      color color1


  .navbar__toggle
    display none

  .main__cart__header
    font-family: 10px